      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AttendanceSystem_Windows.PageFolder.Class"
      xmlns:base="clr-namespace:AttendanceSystem_Windows.PageFolder"
      mc:Ignorable="d" Background="White"
      d:DesignHeight="480" d:DesignWidth="640"
      Title="班级详情页">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Name="ContentGrid"/>
        <Grid Grid.Row="1" Name="ListGrid"/>
        <Grid Grid.Row="1" Grid.Column="1" Name="ListGrid2"/>
    </Grid>
</base:BasePage>
